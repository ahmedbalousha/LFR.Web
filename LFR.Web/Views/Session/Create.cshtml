@model CreateSessionDto

@{
    ViewData["Title"] = "اضافة جلسة جديدة";
    Layout = null;
}

<form asp-action="Create" class="ajaxForm" tname="#kt_datatable">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="SessionDate" class="control-label"></label>
                <input asp-for="SessionDate" class="form-control" />
                <span asp-validation-for="SessionDate" class="text-danger"></span>
            </div>
        </div>


    </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SessionDecision" class="control-label"></label>
                    <input asp-for="SessionDecision" class="form-control" />
                    <span asp-validation-for="SessionDecision" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row" id="issueList">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="IssueId" class="control-label"></label>
                    <select asp-for="IssueId" class="form-control" asp-items="@ViewBag.issues">
                    </select>
                    <span asp-validation-for="IssueId" class="text-danger"></span>
                </div>
            </div>
        </div>



    <div class="form-group">
        <input type="submit" value="اضافة" class="btn btn-primary" />
        <a data-dismiss="modal" aria-label="Close" class="btn btn-danger">الغاء</a>
    </div>
</form>


<script>
    PageLoadActions();
</script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>