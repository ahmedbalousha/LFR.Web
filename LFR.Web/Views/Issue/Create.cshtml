    <div class="form-group">
        <input type="submit" value="اضافة" class="btn btn-primary" />
        <a data-dismiss="modal" aria-label="Close" class="btn btn-danger">الغاء</a>
    </div>
</form>

<script>
    PageLoadActions();

    $('#userInfo').hide();
    $('#userList').hide();

    $('#issueClientType').on('change', function () {
        if (this.value == 1) {
            $('#userInfo').show();
            $('#userList').hide();
        } else if (this.value == 2) {
            $('#userList').show();
            $('#userInfo').hide();
        }
    });
</script>

