@model CreateLawyerChargeDto

@{
    ViewData["Title"] = "اضافة أتعاب جديدة";
    Layout = null;
}

<form asp-action="Create" class="ajaxForm" tname="#kt_datatable">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
        </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Payed" class="control-label"></label>
                    <input asp-for="Payed" class="form-control" />
                    <span asp-validation-for="Payed" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CreatedAt" class="control-label"></label>
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
            </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="PayFor" class="control-label"></label>
                <input asp-for="PayFor" class="form-control" />
                <span asp-validation-for="PayFor" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="CurrencyType" class="control-label"></label>
            <select asp-for="CurrencyType" class="form-control">
                <option value="@CurrencyType.Dinar">دينار</option>
                <option value="@CurrencyType.Dollar">دولار</option>
                <option value="@CurrencyType.Shekel">شيكل </option>

            </select>
            <span asp-validation-for="CurrencyType" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="اضافة" class="btn btn-primary" />
        <a data-dismiss="modal" aria-label="Close" class="btn btn-danger">الغاء</a>
    </div>
</form>


<script>
    PageLoadActions();
</script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>